<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <osgi:reference id="ExternalProviderIdentifierMappingService" interface="org.jahia.modules.external.IdentifierMappingService"/>

    <bean id="TMDBProvider" class="org.jahia.modules.external.ExternalContentStoreProvider" parent="AbstractJCRStoreProvider" >
        <property name="key" value="TMDBProvider"/>
        <property name="mountPoint" value="/test"/>
        <property name="identifierMappingService" ref="ExternalProviderIdentifierMappingService"/>
        <property name="dataSource">
            <bean class="org.jahia.modules.tmdbprovider.TMDBProvider" init-method="start">
                <property name="cacheProvider" ref="ehCacheProvider"/>
            </bean>
        </property>
    </bean>

</beans>